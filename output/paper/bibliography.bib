  author = {Furlong, Melissa A. and Herring, Amy and Buckley, Jessie P. and Goldman, Barbara D. and Daniels, Julie L. and Engel, Lawrence S. and Wolff, Mary S. and Chen, Jia and Wetmur, Jim and Barr, Dana Boyd and Engel, Stephanie M.},
  date = {2017-10-01},
  journaltitle = {Environmental Research},
  shortjournal = {Environmental Research},
  volume = {158},
