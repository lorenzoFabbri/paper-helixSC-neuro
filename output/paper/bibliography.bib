  pmcid = {PMC8453372},
  pmid = {32045779},
  keywords = {Autism Spectrum Disorder,Child,Child Development,Child; Preschool,Cognition,Environmental Exposure,Female,Humans,Infant,Infant Behavior,Male,Nervous System,Phthalic Acids,Pregnancy,To Read},
