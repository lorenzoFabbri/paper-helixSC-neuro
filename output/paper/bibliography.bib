@article{ruszkiewiczTriclosanNeurotoxicAgent2017,
  title = {Is {{Triclosan}} a Neurotoxic Agent?},
  author = {Ruszkiewicz, Joanna A. and Li, Shaojun and Rodriguez, Maliya B. and Aschner, Michael},
