@article{cediel-ulloaImpactEndocrineDisrupting2022,
  title = {Impact of Endocrine Disrupting Chemicals on Neurodevelopment: The Need for Better Testing Strategies for Endocrine Disruption-Induced Developmental Neurotoxicity},
  shorttitle = {Impact of Endocrine Disrupting Chemicals on Neurodevelopment},
  author = {{Cediel-Ulloa}, Andrea and Lupu, Diana Loana and Johansson, Ylva and Hinojosa, Maria and {\"O}zel, Fatih and R{\"u}egg, Jo{\"e}lle},
